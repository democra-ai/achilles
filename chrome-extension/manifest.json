{
  "manifest_version": 3,
  "name": "Achilles Vault",
  "version": "0.2.0",
  "description": "Quick access to your locally encrypted secrets. Detects API keys on pages, one-click import, and auto-fill from vault.",
  "permissions": ["storage", "activeTab", "contextMenus"],
  "host_permissions": ["http://127.0.0.1:8900/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/detector.js"],
      "css": ["content/detector.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["rules/rules.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
