{
  "manifest_version": 3,
  "name": "Achilles Vault",
  "version": "0.1.0",
  "description": "Quick access to your locally encrypted secrets. Connects to Achilles Vault backend.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["http://127.0.0.1:8900/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
